{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "GH_ACCESS_TOKEN",
        "DATABASE_URL",
        "SITE_URL",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".contentlayer/**",
        "dist/**"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "release": {
      "dependsOn": [
        "build",
        "test",
        "lint",
        "check-types"
      ],
      "cache": false
    }
  }
}
