{
  "mcpServers": {
    "blog": {
      "type": "http",
      "url": "https://ruchern.dev/api/mcp",
      "headers": {
        "Authorization": "Bearer ${BLOG_MCP_AUTH_TOKEN}"
      }
    },
    "nextjs": {
      "command": "bunx",
      "args": ["-y", "@vercel/next-devtools-mcp@latest"]
    },
    "shadcn": {
      "command": "bunx",
      "args": ["shadcn@latest", "mcp"]
    }
  }
}
